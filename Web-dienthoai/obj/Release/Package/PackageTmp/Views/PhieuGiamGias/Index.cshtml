@model IEnumerable<Web_dienthoai.Models.PhieuGiamGia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Phiếu Giảm Giá </h2>

<p>
    @Html.ActionLink("Tạo Mới", "Create",null,new { id="bttaomoi"})
</p>
<table class="table  table-striped">
    <tr style="background-color:darkgoldenrod">
        <th>
            Tên Giảm Giá
        </th>
        <th>
            Chiếc Khấu
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenGiamGia)
        </td>
        <td>

            @String.Format("{0:F1}",   @item.chietkhau* 100)%
        </td>
        <td>
            @Html.ActionLink("Chỉnh Sửa", "Edit", new { id=item.MaGG },new { id="btchinhsua"}) |
            @Html.ActionLink("Áp dụng", "dsSPApDung", new { id=item.MaGG },new { id="btad"}) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaGG },new { id="btdl"})
        </td>
    </tr>
}

</table>
