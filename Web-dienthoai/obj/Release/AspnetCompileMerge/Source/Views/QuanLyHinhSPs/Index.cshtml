@model IEnumerable<Web_dienthoai.Models.HinhSP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var hinh = Model.FirstOrDefault();
}

<h2>Index</h2>

<p>
    
    @Html.ActionLink("Thêm Hình", "Create",new { id=hinh.MaSP})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SanPham.TenSP)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img style="width:80px;height:100px" src="~/Images/Phones/@item.MaHinh" />
        </td>
        <td>
            @Html.ActionLink("Xóa Hình","Delete",new { id=item.MaHinh,masp=item.MaSP})
        </td>
    </tr>
}

</table>
