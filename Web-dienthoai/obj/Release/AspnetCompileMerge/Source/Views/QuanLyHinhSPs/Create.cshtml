@model Web_dienthoai.Models.HinhSP

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "QuanLyHinhSPs", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>HinhSP</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <p>Ảnh sản phẩm</p>
            <input type="file" id="Anh" name="Anh" aria-label="gửi ảnh thực tế">
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaSP, "Mã Sản Phẩm", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p>@ViewBag.MaSP</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="btadd" type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
