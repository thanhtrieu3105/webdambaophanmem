@model Web_dienthoai.Models.PhieuGiamGia

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin:30px">
    <h2 style="text-align:center">Chỉnh sửa phiếu giảm giá</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaGG)

            <div class="form-group">
               Tên Giảm Giá
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenGiamGia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenGiamGia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
               Chiếc Khấu
                <div class="col-md-10">
                    @Html.EditorFor(model => model.chietkhau, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-warning" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Trở về", "Index")
    </div>
</div>

