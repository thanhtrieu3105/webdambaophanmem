@model Web_dienthoai.Models.PhieuGiamGia

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="margin:30px">
    <h2 style="text-align:center">Tạo Phiếu </h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal ">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Tên Giảm Giá
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenGiamGia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenGiamGia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Chiết Khấu(vd:20)%
                <div class="col-md-10">
                    @Html.EditorFor(model => model.chietkhau, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.chietkhau, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tạo Phiếu" class="btn btn-warning " />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Trở về", "Index")
    </div>

</div>
