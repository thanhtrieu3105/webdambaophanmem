@model IEnumerable<Web_dienthoai.Models.ProductView>

@{
    ViewBag.Title = "Sanpham";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/Image.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">


@*Iphone*@

<br />

<h3 class="align: text-center" style="font-weight: bold;">@ViewBag.HangDT</h3>
<br />
<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card cardt">
                <a href="@Url.Action("Details", "PhoneStore", new { id = item.SanPham.MaSP })">
                    <img class="card-img-top my-image" src="~/Images/Phones/@item.HinhSP.MaHinh" alt="Card image">
                </a>
                <div class="card-body">
                    @*<h4 class="card-title">@item.SanPham.TenSP</h4>
                        <p class="card-text">@item.SanPham.MaSP</p>*@
                    <h4 class="card-title cardt-title" style="text-align: center;">@item.SanPham.TenSP</h4>
                    <p class="card-text" style="text-align: center; color: red; font-weight: bold">@String.Format("{0:0,0}", @item.ChiTietSP.Gia) vnđ</p>
                    <div style=" display: flex; justify-content: center;">  <a href="@Url.Action("Details", "PhoneStore", new { id = item.SanPham.MaSP })" class="btn btn-primary">Mua ngay</a> </div>

                </div>
            </div>
        </div>
    }
</div>




<script>
    document.addEventListener('DOMContentLoaded', function () {
        let boxes = document.querySelectorAll('.box');

        document.onmousemove = function (e) {
            let x = e.clientX / 3;
            boxes.forEach(box => {
                box.style.transform = "perspective(1000px) rotateY(" + x + "deg)";
            });
        };
    });
</script>
}
