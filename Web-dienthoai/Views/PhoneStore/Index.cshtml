@using Web_dienthoai.Models;
@model IEnumerable<ProductView>


@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml"; }

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/Image.css" />
<link rel="stylesheet" href="~/Content/slide.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">

<style>
    .box {
        transition: transform 0.2s ease-in-out;
    }
</style>
@*slide show*@
<div class="slide" >
    <div class="box">
        <span style="--i:1;"><img src="~/Images/slideshow-1.jpg" alt=""></span>
        <span style="--i:2;"><img src="~/Images/slideshow-2.jpg" alt=""></span>
        <span style="--i:3;"><img src="~/Images/slideshow-3.jpg" alt=""></span>
        <span style="--i:4;"><img src="~/Images/iphoneslide.jpg" alt=""></span>
        <span style="--i:5;"><img src="~/Images/iphoneslide2.jpg" alt=""></span>
        <span style="--i:6;"><img src="~/Images/slideshow-1.jpg" alt=""></span>
    </div>
</div>

<br>

<br />

@*Iphone*@
<h3 class="align: text-center" style="font-weight: bold;">iPhone</h3>
<br />
<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var item in Model.Where(id => id.SanPham.MaTH == "IP"))
    {
        <div class="col">
            <div class="card cardt">
                <a name="@item.SanPham.MaSP" href="@Url.Action("Details", "PhoneStore", new { id = item.SanPham.MaSP }) ">
                    <img class="card-img-top cardt-img-top my-image"
                         src="~/Images/Phones/@item.HinhSP.MaHinh" alt="Card image">
                </a>
                <div class="card-body ">
                    <h4 class="card-title cardt-title" style="text-align: center;">@item.SanPham.TenSP</h4>
                    <p class="card-text" style="text-align: center; color: red; font-weight: bold">@String.Format("{0:0,0}", @item.ChiTietSP.Gia) vnđ d</p>

                    <div style=" display: flex; justify-content: center;">  <a name="@item.SanPham.MaSP" href="@Url.Action("Details", "PhoneStore", new { id = item.SanPham.MaSP })" class="btn btn-primary">Mua ngay</a> </div>

                </div>
            </div>
        </div>
    }




</div>


